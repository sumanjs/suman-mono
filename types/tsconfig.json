{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "allowJs": false,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "test",
    "node_modules"
  ]
}
